# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /enhancers                              Application.enhancers
GET     /enhancers/{name}                       Application.enhancersByName
GET		/tfsites								Application.tfsites  
GET		/tfsites/{TF}							Application.tfsitesByTF 
GET		/tfsites/byenhancer/{enhancer}			Application.tfsitesByEnhancer  
GET		/about									Application.about 
GET		/tfsites/{TF}/align						Application.alignmentByTf  

# Ignore favicon requests
GET     /favicon.ico                            404

# Administration section to lanuch jobs
GET     /admin                          Administration.index


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
